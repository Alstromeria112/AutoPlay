{
    "manifest_version": 3,
    "name": "AutoPlay",
    "version": "1.0",
    "description": "ZEN Study AutoPlay",
    "permissions": [
        "scripting",
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "AutoPlay Settings"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.nnn.ed.nico/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}